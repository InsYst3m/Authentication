@page
@model CookieBasedAuthentication.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form method="post">
    <div>
        <input asp-for="Login" placeholder="Type email or login." />
    </div>
    <div>
        <input asp-for="Password" />
    </div>
    <div>
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>


